@model IEnumerable<SoCoWebApp.Models.Job>

@{
    ViewBag.Title = "Index";
}

<h2>Jobs</h2>
@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>    
 }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Responsibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requirment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeniorityLevel.SeniorityLevel1)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsibility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Requirment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Skill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Offer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdditComment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Office.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeniorityLevel.SeniorityLevel1)
                </td>               
                <td>               
                <td>
                    @Html.ActionLink("Apply", "Create", "Application", new { jobId = item.Id }, null) <br />
                    @if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br />
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    }
                </td>
                 
            </tr>
        }

    </table>
